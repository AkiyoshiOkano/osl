<div class="center hero-unit">

<h1>Listing memos</h1>

    <%= link_to '全て表示', [:microposts] %>
      <% tag_cloud(Micropost.tag_counts_on(:tags), %w(css1 css2 css3 css4)) do |tag, css_class| %>
    <%= link_to tag.name, { :action => :tag, :name => tag.name }, :class => css_class %>
    <% end %>


</div>

<table>
  <tbody>
		<tr>
    	<% @microposts.each do |micropost| %>
        <td><%= micropost.content %></td>
        <td><%= render 'shared/tag_list', tag_list: micropost.tag_list %></td>
        <!-- 
        <p id="notice"><%= notice %></p>
        <td><%= render 'shared/related_microposts', microposts: micropost.find_related_tags %></td>
    	-->
      </tr>
      <br>
  </tbody>
</table>

<% end %>