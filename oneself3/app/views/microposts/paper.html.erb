<div class="center hero-unit">

  <div class="row">
    <h1>Listing memos</h1>
      <%= link_to '全て表示', [:microposts] %>
      <% tag_cloud(Micropost.tag_counts_on(:tags), %w(css1 css2 css3 css4)) do |tag, css_class| %>
    <%= link_to tag.name, { :action => :tag, :name => tag.name }, :class => css_class %>
    <% end %>
    <aside class="span4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="span8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
</div>